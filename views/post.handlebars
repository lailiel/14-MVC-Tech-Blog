{{!-- ---------------------------- --}}
{{!-- populates post --}}

<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{User.name}} on  {{format_date post_date}}</p>
</div>
<div>
    <form class="comment-form">
      <div class="form-group">
        <label for="comment-text">comment:</label>
        <input class="form-input" type="text" id="comment-text" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
</div>

{{!-- ---------------------------- --}}
{{!-- populates post's comments --}}

<div>
    {{#each Comments as |Comment| }}
        <div class="row mb-4 project">
            <div class="col-md-5">
                <p>Created by {{Comment.User.name}} on {{format_date Comment.post_date}}</p>
            </div>
            <div class="col-md-7">
               <p>
             {{Comment.content}}
             </p>
            </div>
        </div>
    {{/each}}

</div>


<script src="/js/comment.js"></script>