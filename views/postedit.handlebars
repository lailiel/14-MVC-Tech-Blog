<h2 id="secondary-header">Edit Post</h2>

<div id="edit-card">
    <form class="post-form" data-post-id="{{id}}">
      <div class="form-group">
        <label for="post-title-label">Title:</label>
        <input class="form-input" type="text" id="edit-post-title" value="{{title}}"/>
        </div>
        <div>
        <label for="post-text-label">Content:</label>
        <textarea class="form-input" type="text" id="edit-post-content"> {{content}}</textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary edit-post" type="submit">Submit</button>
      </div>
    </form>
</div>


<script src="/js/post.js"></script>
