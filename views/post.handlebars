{{!-- ---------------------------- --}}
{{!-- populates post --}}

<div class="text-center card">
    <header>
    <h2>{{title}}</h2>
    <p>Created by <a href="/api/user/{{user_id}}">{{User.name}}</a> on  {{format_date post_date}}</p>
    </header>
        <div class="p-2">
            <p>{{content}}</p>
        </div>
</div>

{{!-- ---------------------------- --}}
{{!-- comment posting --}}

<form class="comment-form">
  <div class="form-group">
    <label for="comment-text-label">comment:</label>
    <textarea class="form-input" type="text" id="comment-text"></textarea>
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>
</form>


{{!-- ---------------------------- --}}
{{!-- populates comments --}}
{{#each Comments as |Comment| }}
  <div class="col mb-4 card">
    <div class="row-md-5 ">
      <header>
        <p>Posted by 
          <a href="/api/user/{{Comment.User.id}}">
          {{Comment.User.name}}
          </a> on {{format_date Comment.post_date}}
        </p>
      </header>
      <div class="col-md-7">
        <p class="p-2">
          {{Comment.content}}
        </p>
      </div>
    </div>
  </div>
{{/each}}

<script src="/js/comment.js"></script>