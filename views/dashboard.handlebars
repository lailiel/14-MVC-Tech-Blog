{{!-- populates posts made by users --}}

<h2>Previous Posts</h2>

<div class="dashboard-post">
    {{#each dashboard as |post| }}
        <div class="card col mb-4 post">
          <header>
            <h3>
              <a href="/api/post/{{post.id}}">{{post.title}}</a>
            </h3>
            <p>Posted on {{format_date post.post_date}}</p>
          </header>
          <div class="col-md-7">
            <p>
             {{post.content}}
            </p>
          </div>
          <div>
            <button class="button edit-post" type="button" data-post-id="{{post.id}}">Edit</button>
            <button class="button delete-post" type="button" data-post-id="{{post.id}}">Delete</button>
          </div>
        </div>
    {{/each}}

</div>

