<h2>Posts by {{profile.User.name}}</h2>


{{#each profile as |post| }}
    <div class="col-md mb-4 card">
        <div class="row-md-5 mb-4">
            <header>
                <h3>
                    <a href="/api/post/{{post.id}}">{{post.title}}</a>
                </h3>
                <p>Posted on {{format_date post.post_date}}</p>
            </header>
        </div>
            <div class="col-md-7">
                <p>
                    {{post.content}}
                </p>
            </div>
    </div>
{{/each}}
